<div class="row">
   <div class="col-md-8">
     <div class="media">
       <br />
       <% avatar_url = @user.avatar_url(@user, 128) %>
       <% if avatar_url %>
         <div class="media-left">
           <%= image_tag avatar_url, class: 'media-object' %>
         </div>
       <% end %>
       <div class="media-body">
         <h2 class="media-heading"><%= @user.name %></h2>
         <small>
           <%= pluralize(@user.posts.count, 'post') %>,
           <%= pluralize(@user.comments.count, 'comment') %>
         </small>
       </div>
     </div>
   </div>
 </div>

 <% if user_has_posts?(@user) %>
    <h2>Posts</h2>
    <%= render @user.posts %>
 <% else %>
    <h2>This user has not submitted any posts yet.</h2>
 <% end %>

<% if user_has_comments?(@user) %>
    <h2>Comments</h2>
    <%= render @user.comments %>
<% else %>
   <h2>This user has not submitted any comments yet.</h2>
<% end %>


<h2>Favorite Posts</h2>
<div class="row">
  <div class="col-sm-4">
    <%= render @fave_posts %>
  </div>
  <div class="col-sm-4">
    <% @fave_gravs.each do |grav| %>
      <div class="grav">
         <%= image_tag grav %>
      </div>
    <% end %>
  </div>
</div>
