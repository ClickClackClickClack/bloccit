<h1>New Advertisement</h1>
<div>
  <%= form_for @advertisement do |f| %>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: "Ad Title" %>
    </div>
    <div>
      <%= f.label :copy %>
      <%= f.text_area :copy, placeholder: "Ad body" %>
    </div>
    <div>
      <%= f.label :price %>
      <%= f.number_field :price, placeholder: 00 %>
    </div>
    <div>
      <%= f.submit "Create New Ad"%>
    </div>
  <% end %>
</div>
